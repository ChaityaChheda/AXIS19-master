<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/parent_layout">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                cardview:cardCornerRadius="10dp"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <ImageView
                        android:id="@+id/gl_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/g"
                        />
                    <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:src="@drawable/gradient_gl"-->
                        <!--/>-->


                    <TextView
                        android:layout_marginTop="135dp"
                        android:id="@+id/gl_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textSize="25sp"
                        android:text="JEPP HEARTSEN"


                        android:textColor="#FFFFFF"
                        />
                    <TextView
                        android:layout_marginTop="165dp"

                        android:id="@+id/gl_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:text="Father of Bluetooth"
                        android:textColor="#FFFFFF"
                        />

                    <TextView
                        android:layout_marginTop="165dp"
                        android:id="@+id/gl_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:layout_marginLeft="250dp"
                        android:layout_gravity="bottom|right"
                        android:text="24th February,2019"
                        android:textColor="#FFFFFF"
                        />


                </FrameLayout>




            </android.support.v7.widget.CardView>

</LinearLayout>